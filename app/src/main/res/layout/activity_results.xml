<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="io.mdevlab.ocatraining.activity.ResultsActivity">

    <include layout="@layout/toolbar"/>

    <!--Score and time-->
    <LinearLayout
        android:id="@+id/score_and_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/results_horizontal_margin_bottom">

        <!--Score value-->
        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/test_score"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"/>

        <!--Duration value-->
        <TextView
            android:id="@+id/duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="90 minutes"
            android:textSize="@dimen/text_size_micro"
            android:textStyle="bold"/>

    </LinearLayout>

    <include layout="@layout/layout_divider_black"/>

    <TextView
        style="@style/ResultsTitleTextView"
        android:text="@string/piechart_title"/>

    <lecho.lib.hellocharts.view.PieChartView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/piechart_dimention"
        android:layout_marginBottom="@dimen/piechart_margin"/>


    <include layout="@layout/layout_divider_black"/>

    <!--Questions-->
    <TextView
        style="@style/ResultsTitleTextView"
        android:text="@string/results_list_title"/>

    <GridView
        android:id="@+id/questions_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:numColumns="3"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:verticalSpacing="8sp"
        tools:listitem="@layout/item_result"/>

    <include layout="@layout/layout_divider_black"/>

    <!--Action buttons-->
    <LinearLayout
        android:id="@+id/results_screen_action_buttons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="upgrade"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/results_horizontal_margin_bottom"
        android:paddingRight="@dimen/results_horizontal_margin_bottom">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="backToMainScreen"
            android:text="@string/back_to_main_screen"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="takeAnotherTest"
            android:text="@string/take_another_test"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="upgrade"
            android:text="@string/upgrade"/>

    </LinearLayout>

</LinearLayout>