<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_chapters_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/all_chapters_height"
    android:layout_margin="@dimen/chapter_card_margin"
    app:cardBackgroundColor="@color/item_color_all_chapter">

    <TextView
        android:id="@+id/all_chapters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Core Java"
        android:textColor="@android:color/white"
        android:textSize="@dimen/chapter_title_size"
        android:textStyle="bold" />

</android.support.v7.widget.CardView>