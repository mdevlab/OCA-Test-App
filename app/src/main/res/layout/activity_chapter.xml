<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.mdevlab.ocatraining.activity.ActivityChapter">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:paddingBottom="@dimen/chapter_up_down_padding"
        android:paddingLeft="@dimen/chapter_side_padding"
        android:paddingRight="@dimen/chapter_side_padding"
        android:paddingTop="@dimen/chapter_up_down_padding">

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/chapter_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/chapter_start_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_media_next" />

</RelativeLayout>
