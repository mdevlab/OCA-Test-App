<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/question_item_dimension"
    android:layout_height="@dimen/question_item_dimension">

    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="10"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="@dimen/bookmark_icon_dimensions"
        android:layout_height="@dimen/bookmark_icon_dimensions"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/bookmarked_question"
        android:gravity="center"
        android:src="@drawable/ic_bookmark_empty" />

</RelativeLayout>