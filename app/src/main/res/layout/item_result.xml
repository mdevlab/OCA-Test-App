<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/question_item_dimension"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="@dimen/bookmark_icon_dimensions"
        android:layout_height="@dimen/bookmark_icon_dimensions"
        android:contentDescription="@string/bookmarked_question"
        android:gravity="center"
        android:src="@drawable/ic_bookmark_empty" />

</LinearLayout>