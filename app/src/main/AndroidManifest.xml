<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.mdevlab.ocatraining">

    <application
        android:name="io.mdevlab.ocatraining.app.OCA"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.mdevlab.ocatraining.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.mdevlab.ocatraining.activity.AllChaptersActivity"
            android:label="@string/title_activity_all_chapters"
            android:parentActivityName="io.mdevlab.ocatraining.activity.MainActivity" />

        <activity android:name="io.mdevlab.ocatraining.activity.ResultsActivity" />
        <activity android:name="io.mdevlab.ocatraining.activity.TestActivity" />
        <activity android:name="io.mdevlab.ocatraining.activity.ResponseActivity" />

        <activity
            android:name="io.mdevlab.ocatraining.activity.FavoriteQuestionsActivity"
            android:label="@string/title_activity_favorite_questions"
            android:parentActivityName="io.mdevlab.ocatraining.activity.MainActivity" />

        <activity
            android:name="io.mdevlab.ocatraining.activity.AboutActivity"
            android:parentActivityName="io.mdevlab.ocatraining.activity.MainActivity" />

        <activity
            android:name="io.mdevlab.ocatraining.activity.ContactActivity"
            android:label="@string/title_activity_contact"
            android:parentActivityName="io.mdevlab.ocatraining.activity.AboutActivity" />
    </application>

</manifest>